{
  "name": "iobroker.rpi-io",
  "version": "0.0.1",
  "description": "iobroker io adapter for raspberry pi",
  "author": {
    "name": "Albert Salai",
    "email": "albert2013@salai.de"
  },
  "homepage": "https://github.com/albert-salai/ioBroker.rpi-io",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:albert-salai/ioBroker.rpi-io.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.2",
    "async-mutex": "^0.5.0",
    "rpio": "^2.4.2",
    "sprintf-js": "^1.1.3"
  },
  "devDependencies": {
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.16.13",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.1",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter"
  },
  "bugs": {
    "url": "https://github.com/albert-salai/ioBroker.rpi-io/issues"
  },
  "readmeFilename": "README.md"
}
