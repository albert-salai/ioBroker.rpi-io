  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/testing": "^5.1.1",
    "@iobroker/types": "^7.0.7",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.6",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.8",
